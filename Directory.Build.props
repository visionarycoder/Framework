<Project>
    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <OutputType>Library</OutputType>
        <LangVersion>latest</LangVersion>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <!-- Code Quality -->
        <AnalysisLevel>latest</AnalysisLevel>
        <EnableNETAnalyzers>true</EnableNETAnalyzers>
        <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>

        <!-- NuGet Package Settings -->
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Authors>Visionary Coder</Authors>
        <Company>Visionary Coder</Company>
        <Copyright>Copyright Â© $([System.DateTime]::Now.Year)</Copyright>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <RepositoryType>git</RepositoryType>
        <RepositoryBranch>main</RepositoryBranch>

        <!-- Source linking and debugging -->
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>

        <!-- XML Documentation Generation -->
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <NoWarn>$(NoWarn);CS1591</NoWarn>
    </PropertyGroup>

    <!-- Expose internals to unit test projects -->
    <ItemGroup>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
            <_Parameter1>$(MSBuildProjectName)UnitTests</_Parameter1>
            <_Parameter1>$(MSBuildProjectName).UnitTests</_Parameter1>
            <_Parameter1>$(MSBuildProjectName).Tests</_Parameter1>
            <_Parameter1>$(MSBuildProjectName).IntegrationTests</_Parameter1>
            <_Parameter1>$(MSBuildProjectName).UnitTests</_Parameter1>
        </AssemblyAttribute>
    </ItemGroup>

    <!-- Code Coverage Configuration -->
    <PropertyGroup Condition="'$(IsTestProject)' != 'true' AND '$(IsBenchmarkProject)' != 'true'">
        <CollectCoverage>true</CollectCoverage>
        <CoverletOutputFormat>opencover</CoverletOutputFormat>
        <CoverletOutput>$(OutputPath)coverage.opencover.xml</CoverletOutput>
        <Exclude>[*]*.Tests.*,[*]*.UnitTests.*,[*]*.IntegrationTests.*,[*]*.Benchmarks.*</Exclude>
        <ExcludeByFile>**/obj/**/*.*,**/bin/**/*.*</ExcludeByFile>
        <IncludeTestAssembly>false</IncludeTestAssembly>
    </PropertyGroup>

    <!-- Test Project Configuration -->
    <PropertyGroup Condition="'$(IsTestProject)' == 'true'">
        <GenerateDocumentationFile>false</GenerateDocumentationFile>
        <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
        <IsPackable>false</IsPackable>
    </PropertyGroup>

</Project>
